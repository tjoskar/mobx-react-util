{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noEmit": false,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "./src",
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true
  }
}
